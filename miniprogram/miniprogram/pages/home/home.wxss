.container{
  padding-top: 0%;
  width: 100%;
  height: 1070rpx;
  background-color: rgba(147, 210, 243, 0.08);
}
.userInformation {/*头像&微信名称*/
  width: 100%;
  height: 60%;
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
}
.userInformation2{
  width: 100%;
  height: 50%;
  display: flex;
}
.userInfomation-avatar {/*头像*/ 
  background-color: #ffffff;
  margin: 0 auto;  
  display: flex;
  justify-content: center;
  overflow: hidden;
  width: 140rpx;
  height: 140rpx;
  border-radius: 500px;
  margin: 20rpx;
  margin-top: 15%;
  margin-left: 4%;
  border-color: #ffffff;
}
.userInformation-nickname {/*昵称*/
  color: #000000;
  font-size: 16px;
  font-weight: bold;
  width: 250rpx;
  height: 40px;
  line-height: 20px;
  margin-top: 19%;
}
